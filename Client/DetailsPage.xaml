<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.AuthorsPage"
             Title="Authors">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Add Author Section - Only visible for Admin -->
            <Frame x:Name="AddAuthorFrame" 
                   BorderColor="LightGray" 
                   CornerRadius="10" 
                   Padding="15"
                   IsVisible="False">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Add New Author" 
                           FontSize="20" 
                           FontAttributes="Bold"/>

                    <Label Text="Name"/>
                    <Entry x:Name="NameEntry" 
                           Placeholder="Enter author name"/>

                    <Button Text="Add Author" 
                            Clicked="OnAddAuthorClicked"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Message Label -->
            <Label x:Name="MessageLabel" 
                   IsVisible="False"
                   FontAttributes="Bold"/>

            <!-- Authors List Section -->
            <Label Text="Existing Authors" 
                   FontSize="20" 
                   FontAttributes="Bold"/>

            <ActivityIndicator x:Name="LoadingIndicator" 
                              IsRunning="False"
                              IsVisible="False"/>

            <CollectionView x:Name="AuthorsCollectionView"
                           SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray" 
                               CornerRadius="5" 
                               Padding="10"
                               Margin="0,5">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding Name}" 
                                       FontSize="16" 
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding Email}" 
                                       FontSize="14"
                                       TextColor="Gray"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>